@model IEnumerable<Vidly.DAL.Objects.Movie>

@{ 
    ViewData["Title"] = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Movies </h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr> <th> Movie </th></tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr> <td> @movie.Name</td></tr>
        }
    </tbody>
</table>








